@using TrainSystem.Entities;
@using TrainSystem.Extensions;
@model TrainSystem.ViewModels.DataViews.Tickets.IndexVM


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/Tickets.css">
    <title>Tickets</title>
</head>
<body>

    <div class="container">
        <div>RouteID</div>
        <div>Price</div>
        <div>UserID</div>
        <div>Action</div>


        @foreach(var item in Model.Items)
        {
            <div>@item.RouteId</div>
            <div>@item.Price</div>
            <div>@item.UserId</div>
            <div>
                <button class="btn"><a href="/Tickets/Edit?id=@item.Id">Edit</a></button>
                <button class="btn"><a href="/Tickets/Delete?id=@item.Id" onclick="return confirm('Delete item?')">Delete</a></button>
            </div>
        }

    </div>

    <button class="create-btn"><a href="/Tickets/Create">Create</a></button>

</body>
