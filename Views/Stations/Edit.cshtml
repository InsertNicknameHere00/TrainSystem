@model TrainSystem.ViewModels.DataViews.Stations.EditVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BDJ | Edit Station</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <form class="log-form" action="/Stations/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        <label>Location: </label>
        @Html.TextBoxFor(m => m.Location)
        @Html.ValidationMessageFor(m => m.Location)
        <button class="right-btn" type="submit">Save</button>
    </form>
</body>